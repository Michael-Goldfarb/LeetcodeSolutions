class Solution:
    def checkXMatrix(self, grid: List[List[int]]) -> bool:
        n = len(grid)
        print(n)
        for i in range(n):
            for j in range(n):
                if((i!=j and i+j!=n-1) and grid[i][j]!=0):
                    return False
                elif((i==j or i+j==n-1) and grid[i][j]==0):
                    return False
        return True